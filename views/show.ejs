<% include partials/header %>

<div class="container" id="showContainer">
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-title center">
                    <h1><%= blogData.title %></h1>
                </div>
                <div class="card-image">
                    <img src="<%= blogData.image %>">
                    <span class="card-title"><%= blogData.title %></span>
                </div>
                <span class="card-content">Posted at: <%= blogData.createdAt.toDateString() %></span>
                <div class="card-content">
                    <p><%- blogData.body %></p>
                </div>
                <div class="card-action">
                    <a id="showEditButton" href="/blogs/<%= blogData._id %>/edit" class="waves-effect waves-light btn">EDIT<i class="material-icons">edit</i></a>
                    <form action="/blogs/<%= blogData._id %>?_method=DELETE" method="POST">
                        <a id="showDeleteButton" class="btn-floating btn-large waves-effect waves-light red"><button id="showDeleteIcon"><i class="material-icons">delete</i></button></a>
                    </form>
                </div>
                <div class="card-action">
                    <a href="/blogs">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>